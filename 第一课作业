    function getPaid()  {
        if (msg.sender != frank) {
            revert();
        }
        uint nextPayDay = lastPayday + payDuration;
        if (nextPayDay > now) {
            revert();
        }
            lastPayday = nextPayDay;
            frank.transfer(salary);
    }
